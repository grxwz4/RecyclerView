<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imPerfil"
        android:layout_width="100dp"
        android:layout_height="105dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/btOcultar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/txUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imPerfil"
        app:layout_constraintLeft_toLeftOf="@id/imPerfil"
        app:layout_constraintRight_toRightOf="@id/imPerfil"
        app:layout_constraintBottom_toTopOf="@id/txStatus"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="Example of title"
        />

    <TextView
        android:id="@+id/txStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="YouTubeHelp"
        app:layout_constraintLeft_toLeftOf="@id/txUser"
        app:layout_constraintTop_toBottomOf="@id/txUser"
        app:layout_constraintRight_toRightOf="@id/txUser"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:layout_margin="6dp"
        />

   <Button
       android:id="@+id/btFollow"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="@id/txStatus"
       app:layout_constraintTop_toBottomOf="@id/txStatus"
       app:layout_constraintRight_toRightOf="@id/txStatus"
       android:textSize="10sp"
       android:layout_marginTop="7dp"
       android:layout_marginHorizontal="6dp"
       android:textAllCaps="false"
       android:text="Follow"
       />

</androidx.constraintlayout.widget.ConstraintLayout>